<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Date-wise Attendance</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Arial, sans-serif;
      background: linear-gradient(135deg, #f5e6d3 0%, #e8d5c4 100%);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .container {
      background: #ffffff;
      border-radius: 30px;
      padding: 50px 60px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      max-width: 900px;
      width: 100%;
      border: 3px solid #e0d5c7;
    }

    h1 {
      font-size: 42px;
      font-weight: 800;
      color: #1a1a2e;
      text-align: center;
      margin-bottom: 40px;
      letter-spacing: -1px;
    }

    .input-group {
      position: relative;
      margin-bottom: 25px;
    }

    .input-group i {
      position: absolute;
      left: 20px;
      top: 50%;
      transform: translateY(-50%);
      font-size: 24px;
      color: #1a1a2e;
      z-index: 1;
    }

    .date-input, .search-input {
      width: 100%;
      padding: 18px 20px 18px 60px;
      font-size: 20px;
      border: 3px solid #d0c4b8;
      border-radius: 20px;
      background: #faf8f5;
      color: #1a1a2e;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .date-input:focus, .search-input:focus {
      outline: none;
      border-color: #a89684;
      background: #ffffff;
    }

    .date-input::placeholder, .search-input::placeholder {
      color: #1a1a2e;
      font-size: 20px;
    }

    /* Custom date input styling */
    .date-input::-webkit-calendar-picker-indicator {
      cursor: pointer;
      font-size: 20px;
      padding: 5px;
    }

    .table-container {
      background: #faf8f5;
      border-radius: 20px;
      border: 3px solid #d0c4b8;
      overflow: hidden;
      margin-bottom: 30px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    thead {
      background: #faf8f5;
    }

    th {
      padding: 20px;
      text-align: left;
      font-size: 22px;
      font-weight: 700;
      color: #1a1a2e;
      border-bottom: 3px solid #d0c4b8;
    }

    tbody tr {
      border-bottom: 2px solid #e8e0d8;
      transition: background 0.2s ease;
    }

    tbody tr:hover {
      background: #f5f0eb;
    }

    tbody tr:last-child {
      border-bottom: none;
    }

    td {
      padding: 22px 20px;
      font-size: 20px;
      color: #1a1a2e;
      font-weight: 600;
    }

    .status-present {
      color: #2d8659;
      font-weight: 700;
    }

    .status-absent {
      color: #d63447;
      font-weight: 700;
    }

    .download-btn {
      display: block;
      width: 100%;
      max-width: 430px;
      margin: 0 auto;
      padding: 18px 30px;
      background: linear-gradient(135deg, #ec4899 0%, #f472b6 100%);
      color: white;
      border: none;
      border-radius: 50px;
      font-size: 24px;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 6px 20px rgba(236, 72, 153, 0.3);
      text-decoration: none;
      text-align: center;
    }

    .download-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(236, 72, 153, 0.4);
      background: linear-gradient(135deg, #db2777 0%, #ec4899 100%);
    }

    .download-btn:active {
      transform: translateY(0);
    }

    .no-data {
      text-align: center;
      padding: 40px;
      font-size: 18px;
      color: #666;
    }

    .back-link {
      display: inline-block;
      margin-top: 20px;
      padding: 10px 20px;
      background: #e8e0d8;
      color: #1a1a2e;
      text-decoration: none;
      border-radius: 12px;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .back-link:hover {
      background: #d0c4b8;
    }

    @media (max-width: 768px) {
      .container {
        padding: 30px 25px;
      }

      h1 {
        font-size: 32px;
        margin-bottom: 30px;
      }

      .date-input, .search-input {
        font-size: 18px;
        padding: 15px 15px 15px 55px;
      }

      th, td {
        padding: 15px 10px;
        font-size: 16px;
      }

      .download-btn {
        font-size: 20px;
        padding: 15px 25px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Date-wise Attendance</h1>
    
    <form method="GET" action="/teacher/attendance-by-date">
      <div class="input-group">
        <i class="fas fa-calendar"></i>
        <input 
          type="date" 
          class="date-input" 
          name="date" 
          value="<%= selectedDate || '' %>"
          onchange="this.form.submit()"
          required
        >
      </div>
    </form>

    <div class="input-group">
      <i class="fas fa-search"></i>
      <input 
        type="text" 
        class="search-input" 
        placeholder="Search Student"
        id="searchInput"
      >
    </div>

    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Roll No.</th>
            <th>Student Name</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody id="attendanceTable">
          <% if (records && records.length > 0) { %>
            <% records.forEach(record => { %>
              <tr>
                <td><%= record.studentId.roll_no %></td>
                <td><%= record.studentId.name %></td>
                <td class="<%= record.status === 'Present' ? 'status-present' : 'status-absent' %>">
                  <%= record.status %>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="3" class="no-data">
                <% if (selectedDate) { %>
                  No attendance records found for this date
                <% } else { %>
                  Please select a date to view attendance
                <% } %>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <% if (records && records.length > 0) { %>
      <button class="download-btn" onclick="downloadReport()">
        Download Report
      </button>
    <% } %>

    <a href="/" class="back-link">â¬… Back to Home</a>
  </div>

  <script>
    // Search functionality
    const searchInput = document.getElementById('searchInput');
    const table = document.getElementById('attendanceTable');

    searchInput.addEventListener('input', function(e) {
      const searchTerm = e.target.value.toLowerCase();
      const rows = table.getElementsByTagName('tr');

      for (let i = 0; i < rows.length; i++) {
        const rollNo = rows[i].getElementsByTagName('td')[0];
        const name = rows[i].getElementsByTagName('td')[1];
        
        if (rollNo && name) {
          const rollNoText = rollNo.textContent.toLowerCase();
          const nameText = name.textContent.toLowerCase();
          
          if (rollNoText.includes(searchTerm) || nameText.includes(searchTerm)) {
            rows[i].style.display = '';
          } else {
            rows[i].style.display = 'none';
          }
        }
      }
    });

    // Download report function
    function downloadReport() {
      const date = document.querySelector('.date-input').value;
      if (date) {
        window.location.href = `/teacher/download-report?date=${date}`;
      }
    }
  </script>
</body>
</html>