<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student-wise Attendance</title>
  <link rel="stylesheet" href="/css/style.css">
  <style></style>
</head>
<body>
  <div class="container">
    <h1>Search Student Attendance</h1>

    <!-- Search Box with Suggestions -->
    <div class="search-container">
      <input 
        type="text" 
        class="search-box" 
        id="searchInput"
        placeholder="🔍 Search by Name or Roll No."
        autocomplete="off"
      >
      <div class="suggestions-box" id="suggestionsBox"></div>
    </div>

    <% if (student) { %>
      <!-- Student Info Card -->
      <div class="card" id="studentCard">
        <h2><%= student.name %></h2>
        <p><strong>Roll No:</strong> <%= student.roll_no %></p>
      </div>

      <!-- Attendance Table -->
      <table id="attendanceTable">
        <thead>
          <tr>
            <th>Date</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% records.forEach(record => { %>
            <tr>
              <td><%= record.date.toDateString() %></td>
              <td class="<%= record.status === 'Present' ? 'present' : 'absent' %>">
                <%= record.status %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <!-- Placeholder for dynamic content -->
      <div id="studentCard"></div>
      <div id="attendanceTable"></div>
    <% } %>
  </div>

  <script>
    const searchInput = document.getElementById('searchInput');
    const suggestionsBox = document.getElementById('suggestionsBox');
    const studentCard = document.getElementById('studentCard');
    const attendanceTable = document.getElementById('attendanceTable');
    let students = [];

    // Fetch all students on page load
    async function fetchStudents() {
      try {
        const response = await fetch('/teacher/students-data');
        students = await response.json();
      } catch (error) {
        console.error('Error fetching students:', error);
      }
    }

    // Fetch and display student attendance
    async function loadStudentAttendance(rollNo) {
      try {
        const response = await fetch(`/teacher/student-attendance-data?roll_no=${rollNo}`);
        const data = await response.json();

        if (!data.student) {
          studentCard.innerHTML = '<div class="card"><p>Student not found</p></div>';
          attendanceTable.innerHTML = '';
          return;
        }

        // Display student card
        studentCard.innerHTML = `
          <div class="card">
            <h2>${data.student.name}</h2>
            <p><strong>Roll No:</strong> ${data.student.roll_no}</p>
          </div>
        `;

        // Display attendance table
        if (data.records.length === 0) {
          attendanceTable.innerHTML = '<p style="text-align: center; color: #6b7280; margin-top: 20px;">No attendance records found</p>';
        } else {
          const rows = data.records.map(record => {
            const date = new Date(record.date).toDateString();
            const statusClass = record.status === 'Present' ? 'present' : 'absent';
            return `
              <tr>
                <td>${date}</td>
                <td class="${statusClass}">${record.status}</td>
              </tr>
            `;
          }).join('');

          attendanceTable.innerHTML = `
            <table>
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                ${rows}
              </tbody>
            </table>
          `;
        }
      } catch (error) {
        console.error('Error loading student attendance:', error);
        studentCard.innerHTML = '<div class="card"><p>Error loading student data</p></div>';
        attendanceTable.innerHTML = '';
      }
    }

    // Filter and display suggestions
    function showSuggestions(query) {
      if (!query.trim()) {
        suggestionsBox.classList.remove('active');
        return;
      }

      const filtered = students.filter(student => {
        const nameMatch = student.name.toLowerCase().includes(query.toLowerCase());
        const rollMatch = student.roll_no.toLowerCase().includes(query.toLowerCase());
        return nameMatch || rollMatch;
      });

      if (filtered.length === 0) {
        suggestionsBox.innerHTML = '<div class="no-results">No students found</div>';
        suggestionsBox.classList.add('active');
        return;
      }

      const html = filtered.map(student => 
        `<div class="suggestion-item" data-rollno="${student.roll_no}">
          ${student.name} : ${student.roll_no}
        </div>`
      ).join('');

      suggestionsBox.innerHTML = html;
      suggestionsBox.classList.add('active');

      // Add click event to each suggestion
      document.querySelectorAll('.suggestion-item').forEach(item => {
        item.addEventListener('click', function() {
          const rollNo = this.getAttribute('data-rollno');
          const text = this.textContent.trim();
          searchInput.value = text;
          suggestionsBox.classList.remove('active');
          
          // Load student attendance immediately
          loadStudentAttendance(rollNo);
        });
      });
    }

    // Event listeners
    searchInput.addEventListener('input', (e) => {
      showSuggestions(e.target.value);
    });

    searchInput.addEventListener('focus', (e) => {
      if (e.target.value.trim()) {
        showSuggestions(e.target.value);
      }
    });

    // Close suggestions when clicking outside
    document.addEventListener('click', (e) => {
      if (!e.target.closest('.search-container')) {
        suggestionsBox.classList.remove('active');
      }
    });

    // Fetch students when page loads
    fetchStudents();
  </script>
</body>
</html>