<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Students</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Arial, sans-serif;
      background: linear-gradient(135deg, #f5e6d3 0%, #e8d5c4 100%);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .container {
      background: #ffffff;
      border-radius: 30px;
      padding: 50px 60px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      max-width: 1000px;
      width: 100%;
      border: 3px solid #e0d5c7;
    }

    h1 {
      font-size: 42px;
      font-weight: 800;
      color: #1a1a2e;
      text-align: center;
      margin-bottom: 40px;
      letter-spacing: -1px;
    }

    .input-group {
      position: relative;
      margin-bottom: 25px;
    }

    .input-group i {
      position: absolute;
      left: 20px;
      top: 50%;
      transform: translateY(-50%);
      font-size: 24px;
      color: #1a1a2e;
      z-index: 1;
    }

    .search-input {
      width: 100%;
      padding: 18px 20px 18px 60px;
      font-size: 20px;
      border: 3px solid #d0c4b8;
      border-radius: 20px;
      background: #faf8f5;
      color: #1a1a2e;
      transition: all 0.3s ease;
    }

    .search-input:focus {
      outline: none;
      border-color: #a89684;
      background: #ffffff;
    }

    .search-input::placeholder {
      color: #1a1a2e;
      font-size: 20px;
    }

    .table-container {
      background: #faf8f5;
      border-radius: 20px;
      border: 3px solid #d0c4b8;
      overflow: hidden;
      margin-bottom: 30px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    thead {
      background: #faf8f5;
    }

    th {
      padding: 20px;
      text-align: left;
      font-size: 22px;
      font-weight: 700;
      color: #1a1a2e;
      border-bottom: 3px solid #d0c4b8;
    }

    th:last-child {
      text-align: center;
    }

    tbody tr {
      border-bottom: 2px solid #e8e0d8;
      transition: background 0.2s ease;
    }

    tbody tr:hover {
      background: #f5f0eb;
    }

    tbody tr:last-child {
      border-bottom: none;
    }

    td {
      padding: 22px 20px;
      font-size: 20px;
      color: #1a1a2e;
      font-weight: 600;
    }

    .action-icons {
      display: flex;
      gap: 15px;
      justify-content: center;
    }

    .icon-btn {
      background: none;
      border: none;
      cursor: pointer;
      font-size: 20px;
      padding: 8px;
      transition: all 0.3s ease;
      border-radius: 8px;
    }

    .edit-btn {
      color: #2563eb;
    }

    .edit-btn:hover {
      color: #1d4ed8;
      transform: scale(1.15);
      background: rgba(37, 99, 235, 0.1);
    }

    .delete-btn {
      color: #dc2626;
    }

    .delete-btn:hover {
      color: #991b1b;
      transform: scale(1.15);
      background: rgba(220, 38, 38, 0.1);
    }

    .back-link {
      display: inline-block;
      margin-top: 20px;
      padding: 12px 24px;
      background: #e8e0d8;
      color: #1a1a2e;
      text-decoration: none;
      border-radius: 15px;
      font-weight: 700;
      font-size: 18px;
      transition: all 0.3s ease;
    }

    .back-link:hover {
      background: #d0c4b8;
      transform: translateX(-3px);
    }

    .no-data {
      text-align: center;
      padding: 40px;
      font-size: 18px;
      color: #666;
    }

    /* Modal Styles */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      justify-content: center;
      align-items: center;
    }

    .modal-content {
      background: #ffffff;
      padding: 40px;
      border-radius: 25px;
      width: 90%;
      max-width: 450px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
      border: 3px solid #e0d5c7;
    }

    .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }

    .modal-header h2 {
      margin: 0;
      color: #1a1a2e;
      font-size: 28px;
      font-weight: 800;
    }

    .close {
      font-size: 32px;
      font-weight: bold;
      color: #6b7280;
      cursor: pointer;
      border: none;
      background: none;
      transition: all 0.2s;
    }

    .close:hover {
      color: #1a1a2e;
      transform: rotate(90deg);
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      margin-bottom: 8px;
      color: #1a1a2e;
      font-weight: 700;
      font-size: 16px;
    }

    .form-group input {
      width: 100%;
      padding: 14px 18px;
      border: 3px solid #d0c4b8;
      border-radius: 15px;
      font-size: 16px;
      box-sizing: border-box;
      background: #faf8f5;
      color: #1a1a2e;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .form-group input:focus {
      outline: none;
      border-color: #a89684;
      background: #ffffff;
    }

    .modal-buttons {
      display: flex;
      gap: 12px;
      justify-content: flex-end;
      margin-top: 30px;
    }

    .btn {
      padding: 12px 28px;
      border: none;
      border-radius: 15px;
      cursor: pointer;
      font-size: 16px;
      font-weight: 700;
      transition: all 0.3s;
    }

    .btn-primary {
      background: linear-gradient(135deg, #ec4899 0%, #f472b6 100%);
      color: white;
      box-shadow: 0 4px 15px rgba(236, 72, 153, 0.3);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(236, 72, 153, 0.4);
    }

    .btn-secondary {
      background: #e8e0d8;
      color: #1a1a2e;
    }

    .btn-secondary:hover {
      background: #d0c4b8;
    }

    @media (max-width: 768px) {
      .container {
        padding: 30px 25px;
      }

      h1 {
        font-size: 32px;
        margin-bottom: 30px;
      }

      .search-input {
        font-size: 18px;
        padding: 15px 15px 15px 55px;
      }

      th,
      td {
        padding: 15px 10px;
        font-size: 16px;
      }

      .icon-btn {
        font-size: 18px;
        padding: 6px;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>All Students</h1>

    <div class="input-group">
      <i class="fas fa-search"></i>
      <input type="text" class="search-input" placeholder="Search Student" id="searchInput">
    </div>

    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Roll No</th>
            <th>Edit/Delete</th>
            <th style="text-align: center;">Actions</th>
          </tr>
        </thead>
        <tbody id="studentTable">
          <% if (students && students.length> 0) { %>
            <% students.forEach(student=> { %>
              <tr>
                <td><%= student.name %></td>
                <td><%= student.roll_no %></td>
                <td><%= student.email %></td>
                <td>
                  <div class="action-icons">
                    <button class="icon-btn edit-btn"
                      onclick="openEditModal('<%= student._id %>', '<%= student.name %>', '<%= student.roll_no %>', '<%= student.email %>')"
                      title="Edit Student">
                      <i class="fas fa-pen"></i>
                    </button>
                    <button class="icon-btn delete-btn"
                      onclick="confirmDelete('<%= student._id %>', '<%= student.name %>')" title="Delete Student">
                      <i class="fas fa-trash"></i>
                    </button>
                  </div>
                </td>
              </tr>
              <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="4" class="no-data">No students found</td>
                  </tr>
                  <% } %>
        </tbody>
      </table>
    </div>
    <a href="/" class="back-link">â¬… Back to Home</a>
  </div>

  <!-- Edit Modal -->
  <div id="editModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Edit Student</h2>
        <button class="close" onclick="closeEditModal()">&times;</button>
      </div>
      <form id="editForm" method="POST" action="/teacher/edit-student">
        <input type="hidden" id="editStudentId" name="studentId">

        <div class="form-group">
          <label for="editName">Name</label>
          <input type="text" id="editName" name="name" required>
        </div>

        <div class="form-group">
          <label for="editRollNo">Roll No</label>
          <input type="text" id="editRollNo" name="roll_no" maxlength="6" required>
        </div>

        <div class="form-group">
          <label for="editEmail">Email</label>
          <input type="email" id="editEmail" name="email">
        </div>

        <div class="modal-buttons">
          <button type="button" class="btn btn-secondary" onclick="closeEditModal()">Cancel</button>
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Search functionality
    const searchInput = document.getElementById('searchInput');
    const table = document.getElementById('studentTable');

    searchInput.addEventListener('input', function(e) {
      const searchTerm = e.target.value.toLowerCase();
      const rows = table.getElementsByTagName('tr');

      for (let i = 0; i < rows.length; i++) {
        const cells = rows[i].getElementsByTagName('td');
        if (cells.length > 0) {
          const rollNo = cells[0]?.textContent.toLowerCase() || '';
          const name = cells[1]?.textContent.toLowerCase() || '';
          const email = cells[2]?.textContent.toLowerCase() || '';
          
          if (rollNo.includes(searchTerm) || name.includes(searchTerm) || email.includes(searchTerm)) {
            rows[i].style.display = '';
          } else {
            rows[i].style.display = 'none';
          }
        }
      }
    });

    function openEditModal(id, name, rollNo, email) {
      document.getElementById('editStudentId').value = id;
      document.getElementById('editName').value = name;
      document.getElementById('editRollNo').value = rollNo;
      document.getElementById('editEmail').value = email || '';
      document.getElementById('editModal').style.display = 'flex';
    }

    function closeEditModal() {
      document.getElementById('editModal').style.display = 'none';
    }

    function confirmDelete(id, name) {
      if (confirm(`Are you sure you want to delete ${name}?\n\nThis will also delete all their attendance records.`)) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/teacher/delete-student';
        
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'studentId';
        input.value = id;
        
        form.appendChild(input);
        document.body.appendChild(form);
        form.submit();
      }
    }

    // Close modal when clicking outside
    window.onclick = function(event) {
      const modal = document.getElementById('editModal');
      if (event.target == modal) {
        closeEditModal();
      }
    }
  </script>
</body>

</html>